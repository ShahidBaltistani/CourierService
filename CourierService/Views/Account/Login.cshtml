                                    <input type="password" name="Password" id="login-form-password" class="form-control password" required="">
                                    <span class="form-bar"></span>
                                    <label class="float-label">Password</label>
                                    <span id="errorPasswordLogin" class="text-danger"></span>
                                </div>

                                <div class="row m-t-30">
                                    <div class="col-md-12">
                                        <button type="button" id="btnLoginSubmit" class="btn btn-primary btn-md btn-block waves-effect text-center m-b-20" style=" color: #fff; background-color: #263544; border-color: #263544;">LOGIN</button>

                                    </div>
                                </div>
