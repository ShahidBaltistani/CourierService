    <script type="text/javascript">
        $("#btnLoginSubmit").click(function (evt) {
            var userNameInput = $(".user-name");
            var passwordInput = $(".password");
            var errorBorder = { "border": "1px solid red" };
            var normalBorder = { "border": "1px solid lightgray" };
            var userName = userNameInput.val();
            var password = passwordInput.val();
            if (userName.length > 0) {
                userNameInput.css(normalBorder);
                if (password.length > 0) {
                    passwordInput.css(normalBorder);
                    $("#login-error-message").html("");
                    $.ajax({
                        url: `/Account/Login?userName=${userName}&password=${password}`,
                        method: 'POST'
                    }).done(function (response) {
                        $("#btnLoginSubmit").html("Login");
                        if (response === "Failed") {
                            $("#errorUserNameLogin").html("Username or Password Incorrect")
                            passwordInput.css(errorBorder);
                            userNameInput.css(errorBorder);
                        } else {
                            window.location.href = '/Home/Dashboard';

                        }
                        //Success
                    }).fail(function () {
                        //Fail
                    });
                } else {
                    passwordInput.css(errorBorder);
                }
            } else {
                userNameInput.css(errorBorder);
            }
     
        });

        function fieldRequire() {

            if ($("#login-form-username").val().length != 0 && $("#login-form-password").val().length != 0 ) {
                return true;
            }
            else {
                if ($("#login-form-username").val().length == 0) {
                    $("#errorUserNameLogin").text("Username required");
                }
                if ($("#login-form-password").val().length == 0) {
                    $("#errorPasswordLogin").text("Password required");

                }
                return false;
            }
        }

